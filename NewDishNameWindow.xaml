<Window x:Class="JogoGourmet.NewDishNameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JogoGourmet"
        mc:Ignorable="d"
        Title="New Dish Name" Height="150" Width="300">
    <Grid>
        <TextBlock Text="I couldn't guess the dish! Please tell me the answer!" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,40"/>
        <TextBox x:Name="NewDishTextBox" Margin="22,60,22,52" ></TextBox>
        <Button Content="OK!" HorizontalAlignment="Center" VerticalAlignment="Top" Click="OnOkButtonClick" Margin="0,87,0,0"/>
    </Grid>
</Window>
