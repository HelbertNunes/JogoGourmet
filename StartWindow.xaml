<Window x:Class="JogoGourmet.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JogoGourmet"
        mc:Ignorable="d"
        Title="Gourmet Game" Height="150" Width="300">
    <Grid Margin="0,0,0,2">
        <TextBlock Text="Think in your favourite dish!" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,40"/>
        <Button Content="OK!" HorizontalAlignment="Center" VerticalAlignment="Top" Click="OnOkButtonClick" Margin="0,66,0,0"/>
    </Grid>
</Window>
