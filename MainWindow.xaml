<Window x:Class="JogoGourmet.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JogoGourmet"
        mc:Ignorable="d"
        Title="Guessing" Height="150" Width="400">
    <Grid>
        <TextBlock x:Name ="MainTextBlock"
                   VerticalAlignment="Top" Margin="14,37,6,0"/>
        <Button Content="Yes" VerticalAlignment="Top" Margin="45,76,155,0" Width="100" Click="OnGuessYesButtonClick"/>
        <TextBlock x:Name="GuessResultYes" VerticalAlignment="Top" Margin="10,120,0,0"/>
        <Button Content="No" VerticalAlignment="Top" Margin="150,76,50,0" Width="100" Click="OnGuessNoButtonClick" RenderTransformOrigin="-2.639,-0.091"/>
        <TextBlock x:Name="GuessResultNo" VerticalAlignment="Center" Margin="10,120,0,0" Height="167"/>
    </Grid>
</Window>
